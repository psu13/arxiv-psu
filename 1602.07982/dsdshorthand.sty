%%%%%%% Argument-taking Macros, Size Control %%%%%%%
\newcommand   \pdr  [2] {\frac{\partial #1}{\partial #2}}
\newcommand   \pddr [3] {
  \ifthenelse{\equal{#3}{}}
    { \frac{\partial^2 #1}{\partial #2^2}           }
    { \frac{\partial^2 #1}{\partial #2 \partial #3} }
}
\newcommand   \rdr  [2] {\frac{d #1}{d #2}}
\newcommand   \rddr [3] {
  \ifthenelse{\equal{#3}{}}
    { \frac{d^2 #1}{d #2^2}    }
    { \frac{d^2 #1}{d #2 d #3} }
}

