\begin_inset Formula \begin{equation}
S=\frac{1}{2}\int dt\, d^{3}\mathbf{k}\left[\dot{\phi}_{\mathbf{k}}\dot{\phi}_{\mathbf{k}}^{*}-\omega_{k}^{2}\phi_{\mathbf{k}}\phi_{\mathbf{k}}^{*}\right].\label{eq:S phik1}\end{equation}

