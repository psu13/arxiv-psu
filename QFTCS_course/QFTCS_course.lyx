\begin_inset Formula \begin{align*}
q(t) & =Ae^{i\omega_{0}t}+Be^{-i\omega_{0}t},\quad t\leq t_{0};\\
q(t) & =Ae^{i\omega_{1}t}+Be^{-i\omega_{1}t},\quad t\geq t_{1}.\end{align*}

